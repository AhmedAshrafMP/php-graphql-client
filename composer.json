{
    "name": "camuthig/graphql-client",
    "description": "A GraphQL client for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Muthig",
            "email": "camuthig@mail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1",
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Camuthig\\Graphql\\Client\\": "src"
        }
    },
    "autoload-dev": {
      "psr-4": {
          "Camuthig\\Graphql\\Client\\Test\\": "tests"
      }
    },
    "scripts": {
        "check-style": "vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
